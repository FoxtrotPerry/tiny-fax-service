{
  "name": "tiny-fax-client",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@point-of-sale/network-receipt-printer": "^2.0.1",
    "@point-of-sale/receipt-printer-encoder": "^3.0.3",
    "axios": "^1.9.0",
    "zod": "^3.24.3"
  },
  "scripts": {
    "1": "# ======= DEV COMMANDS ======= #",
    "dev": "bun --watch src/index.ts",
    "dev:refresh": "bun --watch src/refresh.ts",
    "2": "# ======= BUILD COMMANDS ======= #",
    "package": "bun compile && bun cp:setup",
    "compile": "bun compile:printer; bun compile:refresh",
    "compile:printer": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile ./dist/bin/tf_printer ./src/index.ts",
    "compile:refresh": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile ./dist/bin/tf_refresh ./src/refresh.ts",
    "cp:setup": "mkdir -p dist/setup/ && cp -rL setup/* dist/setup/ && chmod +x dist/setup/**/*.sh",
    "3": "# ======= PROD COMMANDS ======= #",
    "prod": "./dist/bin/tf_printer",
    "prod:refresh": "./dist/bin/tf_refresh"
  }
}
